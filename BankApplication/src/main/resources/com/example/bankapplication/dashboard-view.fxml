<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<HBox spacing="30" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bankapplication.DashboardController">

    <!-- Image on Left -->

    <ImageView fx:id="bankImageView" fitWidth="400" fitHeight="400"/>
    <Button text="Notifications" fx:id="notificationsButton" onAction="#handleNotificationsButton"
            layoutX="50" layoutY="200" minWidth="150"/>

    <!-- Buttons on Right -->
    <VBox alignment="CENTER" spacing="15">
        <Button text="View Loans" onAction="#handleViewLoansButton"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>
        <Button text="ask for leave" onAction="#handleAskForLeave"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>

    </VBox>

</HBox>